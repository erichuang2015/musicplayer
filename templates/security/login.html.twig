<!DOCTYPE html>
<html lang="en">
{% include 'header.html.twig' %}
<body>

<div id="app">
    <nav class="navbar navbar-expand-md navbar-light navbar-laravel">
        <div class="container">
            <a class="navbar-brand" href="http://20.20.20.20">
                MPLAYER 1.0
            </a>


            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <!-- Left Side Of Navbar -->
                <ul class="navbar-nav mr-auto">

                </ul>

                <!-- Right Side Of Navbar -->
                <ul class="navbar-nav ml-auto">
                    <!-- Authentication Links -->
                    <li class="nav-item">
                        <a class="nav-link" href="/">Home</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <main class="py-4">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-8">
                    <div class="card">
                        <div class="card-header">Login</div>

                        <form method="post">

                        <div class="card-body">
                            <form method="POST" action="http://20.20.20.20/register">


                                <div class="form-group row">
                                    <label for="password" class="col-md-4 col-form-label text-md-right">E-mail Address</label>

                                    <div class="col-md-6">
                                        <input id="password" type="email" class="form-control" name="email" required>

                                    </div>
                                </div>

                                <div class="form-group row">
                                    <label for="password-confirm" class="col-md-4 col-form-label text-md-right">Password</label>

                                    <div class="col-md-6">
                                        <input id="password-confirm" type="password" class="form-control" name="password" required>
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <label for="remember-confirm" class="col-md-4 col-form-label text-md-right"></label>

                                    <div class="col-md-6">
                                        <input type="checkbox" name="_remember_me" id="remember-confirm"> Remember me
                                    </div>
                                </div>

                                <input type="hidden" name="_csrf_token"
                                       value="{{ csrf_token('authenticate') }}"
                                >

                                <div class="form-group row mb-0">
                                    <div class="col-md-6 offset-md-4">
                                        <button type="submit" class="btn-small btn btn-primary">
                                            Login
                                        </button>
                                    </div>
                                </div>

                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
</div>
</body>
{% include 'footer.html.twig' %}
</html>


